<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>

		<!-- JDBC connection pool (use the built-in) -->
		<property name="connection.pool_size">1</property>

		<!-- Enable Hibernate's automatic session context management -->
		<property name="current_session_context_class">thread</property>
		<property name="show_sql">true</property>


		<!-- Resource Mappings -->
		<mapping resource="tr/com/lucidcode/model/StockSymbols.hbm.xml"></mapping>
		<mapping resource="tr/com/lucidcode/model/Reports.hbm.xml"></mapping>
		<mapping resource="tr/com/lucidcode/model/ReportDetails.hbm.xml"></mapping>
		<mapping resource="tr/com/lucidcode/model/StockPrice.hbm.xml"></mapping>
		<mapping resource="tr/com/lucidcode/model/MoneyControlScrips.hbm.xml"></mapping>
		<mapping resource="tr/com/lucidcode/model/MutualFunds.hbm.xml"></mapping>
		<mapping resource="tr/com/lucidcode/model/MutualFundsPerformance.hbm.xml"></mapping>
	</session-factory>
</hibernate-configuration>
